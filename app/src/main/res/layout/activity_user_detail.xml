<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserDetailActivity">

    <TextView
        android:id="@+id/userId"
        android:layout_margin="@dimen/horizontal_margin"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="@string/userid_label"
        android:textSize="@dimen/font_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_alignBaseline="@+id/userId"
        android:textSize="@dimen/font_size"
        android:id="@+id/userid_tv"
        android:layout_marginTop="@dimen/vertical_margin_large"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/userId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/id"
        android:layout_margin="@dimen/horizontal_margin"
        android:layout_below="@+id/userId"
        android:text="@string/id_label"
        android:textSize="@dimen/font_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_alignBaseline="@+id/id"
        android:textSize="@dimen/font_size"
        android:id="@+id/id_tv"
        android:layout_below="@+id/userId"
        android:layout_toRightOf="@+id/id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/title"
        android:layout_margin="@dimen/horizontal_margin"
        android:layout_below="@+id/id"
        android:text="@string/title_label"
        android:textSize="@dimen/font_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_alignBaseline="@+id/title"
        android:textSize="@dimen/font_size"
        android:id="@+id/title_tv"
        android:layout_below="@+id/id"
        android:layout_toRightOf="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/completed"
        android:layout_margin="@dimen/horizontal_margin"
        android:layout_below="@+id/title"
        android:text="@string/completed_label"
        android:textSize="@dimen/font_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_alignBaseline="@+id/completed"
        android:textSize="@dimen/font_size"
        android:id="@+id/completed_tv"
        android:layout_below="@+id/title"
        android:layout_toRightOf="@+id/completed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />




</RelativeLayout>